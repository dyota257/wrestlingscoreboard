<body>
    <%- include('header'); %>
    
    <%- tournamentWarning %>
    <div id="tournamentId" style="display:none"><%- tournamentId %></div>


    <div id="resetGameRow">
        <button class="resetGame" id = "setGame">Set game</button>
        <button class="resetGame" id = "resetGame">Reset all</button>
        <button class="resetGame" id = "fixtures">Fixtures</button>
        <button class="resetGame" id = "prev"><<</button>
        <button class="resetGame" id = "next">>></button>
    </div>

<!-- Game setup - disappearable rows  -->
    <div class = "container" id = "fixturesTable" style="display:none"> 
        <%- table %>
    </div>

    <div class = "container" id="playerInput" style="display:none">
        <table class="container">
            <tr>
                    <%- include ('scoreboard/playerinput') %> 
                    <%- include ('scoreboard/dropdowns') %> 
            </tr>
            <tr>
                <td colspan="5" >
                    <button class="resetGame" id="setConfirmGame">Confirm</button>
                    <button class="resetGame" id="cancelConfirmGame">Cancel</button>
                </td>
            </tr>
        </table>
    </div>


<!-- Main Score Display -->
    <div class="container" id="main-display">
<!-- Red side -->
        <div class="red playerData" style="display: table; table-layout: inherit;">
            <div style="display: table-cell; text-align: left;">
                <span class = "red clubName">redClubName</span>
            </div>
            <div style="display: table-cell;">
                <span class = "red firstName">redFirstName</span><br>
                <span class = "red lastName">redLastName</span><br>
            </div>
        </div>
<!-- Timer central -->
        <div class="middle">
            <span id="period">Period 1</span><br>
            <span id="gameType"></span>
            <br>
            <span id="timer">0:00</span>
            <br>
            <button class ="timer" id="startTimer" >‚ñ∂</button>
            <button id = "announcevictory">Announce victory</button>

        </div>
<!-- Blue side -->
        <div class="blue playerData" style="display: table; table-layout: fixed;">
            <div style="display: table-cell;">
                <span class = "blue firstName">blueFirstName</span><br>
                <span class = "blue lastName">blueLastName</span><br>
            </div>
            <div style="display: table-cell; text-align: right;">
                <span class = "blue clubName">blueClubName</span>
            </div>
        </div>
<!-- Player scores -->
        <div class="red scorebox">
            <div class="red markerWarning"></div>
            <div class="red score">0</div>
            <div class="red shotclock">0:00</div>
        </div>
        <div class="blue scorebox">
            <div class="blue markerWarning"></div>
            <div class="blue score">0</div>
            <div class="blue shotclock">0:00</div>
        </div>
<!-- Control buttons row 1: scores -->
        <div class="red points-control">
            <div class="red buttonsRow">
                <table style="border:none; margin-right:0; margin-left:auto;">
                    <tr>
                        <td class="red buttonsRow" style="border:none"><button value=4>+5</button> 
                            <!-- <br>A</td> -->
                        <td class="red buttonsRow" style="border:none"><button value=3>+4</button> 
                            <!-- <br>S</td> -->
                        <td class="red buttonsRow" style="border:none"><button value=2>+2</button> 
                            <!-- <br>D</td> -->
                        <td class="red buttonsRow" style="border:none"><button value=1>+1</button> 
                            <!-- <br>F</td> -->
                        <td class="red buttonsRow" style="border:none"><button value=0>-1</button> 
                            <!-- <br>G</td> -->
                    </tr>
                </table>
            </div>
        </div>
        <div class="blue points-control">
            <div class="blue buttonsRow">
                <table style="border:none;margin-right:auto; margin-left:0;">
                    <tr>
                        <td class="blue buttonsRow" style="border:none"><button value=0>-1</button>
                            <!-- <br>H</td> -->
                        <td class="blue buttonsRow" style="border:none"><button value=1>+1</button>
                            <!-- <br>J</td> -->
                        <td class="blue buttonsRow" style="border:none"><button value=2>+2</button>
                            <!-- <br>K</td> -->
                        <td class="blue buttonsRow" style="border:none"><button value=3>+4</button>
                            <!-- <br>L</td> -->
                        <td class="blue buttonsRow" style="border:none"><button value=4>+5</button>
                            <!-- <br>;</td> -->
                    </tr>
                </table>

            </div>
        </div>
<!-- Control buttons row 2: warning -->
        <div class="red penalty">
            <button class="pin">üìç Pin!</button>
            <button class="warning">‚ö†Ô∏èWarning</button>
            <button class="shotclockbtn" id="shotclockbuttonred">‚è±Ô∏è Shot clock</button>
        </div>
        <div class="blue penalty">
            <button class="shotclockbtn" id="shotclockbuttonblue">‚è±Ô∏è Shot clock</button>
            <button class="warning">‚ö†Ô∏è Warning</button>
            <button class="pin">üìç Pin!</button>
        </div>
<!-- Control buttons row 3: reset -->
        <!-- <div class="red pin"></div>
        <div class="blue pin"></div> -->
    </div>

