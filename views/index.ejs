<%- include('boilerplate') %>
    
    <title>Wrestling WA Tournament Centre</title>
    <style>
        form {
            display: inline;
        }
    </style>
</head>

<body>
    <%- include('header') %>
    
    <h1>Tournament Centre</h1>
    
        <% if (tournamentId != -1) { %>
            <form action="/tournaments/openHome" method="get">
                <button class="button is-primary is-large" type="submit">Go to current tournament</button>
            </form>
        <% } %>
        <form action="/tournaments/setup" method="get">
            <button class="button is-primary" type="submit">Set up new tournament</button>
        </form>

        <form action="/tournaments/history" method="get">
            <button class="button is-primary" type="submit">Past tournaments</button>
        </form>

        <form action="/wrestlers/all" method="get">
            <button class="button is-primary" type="submit">All Wrestlers</button>
        </form>
        <form action="/scoreboard/A" method="get">
            <button class="button is-primary" type="submit">Scoreboard</button>
        </form>

</body>
</html>